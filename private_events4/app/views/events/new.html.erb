<% @event.errors.each do |error| %>
    <ul>
        <li><%= error.full_message %></li>
    </ul>
<% end %>


<h1>Create new event:</h1>

<%= form_with model: @event do |form| %>
    <div>
        <%= form.label :place %>
        <%= form.text_field :place %>
    </div>

    <div>
        <%= form.label :date %>
        <%= form.date_select :date %>
    </div>

    <div>
        <%= form.submit %>
    </div>

    <div>
        <%= link_to "Back", root_path %>
    </div>

<% end %>
